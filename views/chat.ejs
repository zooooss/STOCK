<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
            <link rel="stylesheet" href="/main.css" />   
    <title>Team Chat</title>
              <style>
            * {
                box-sizing: border-box;
                font-family: 'Inter', sans-serif;
            }

            /* âœ… orderlistì™€ ë™ì¼í•˜ê²Œ */
            html, body {
                height: 100%;
                margin: 0;
                overflow: hidden;
            }

            body {
                background: white;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            /* âœ… ì±„íŒ… ì»¨í…Œì´ë„ˆ - orderlistì˜ .containerì™€ ë™ì¼ */
            .chat-container {
                flex: 1;
                width: 100%;
                max-width: 480px;
                padding: 0 20px; /* âœ… orderlistì™€ ë™ì¼ */
                padding-top: 20px; /* âœ… orderlistì˜ margin-topê³¼ ë™ì¼ */
                overflow-y: auto;
                overflow-x: hidden;
            }

            .chat-message {
                display: flex;
                flex-direction: column;
                margin-bottom: 20px;
                flex-shrink: 0;
            }

            .chat-message.mine {
                align-items: flex-end;
            }

            .sender {
                font-size: 12px;
                font-weight: 700;
                margin-bottom: 4px;
                margin-left: 6px;
            }

            .chat-message.mine .sender {
                margin-right: 6px;
                margin-left: 0;
            }

            .bubble {
                display: inline-flex;
                align-items: center;
                background: white;
                border: 2px solid #111;
                border-radius: 14px;
                padding: 10px 14px;
                max-width: 80%;
                font-size: 14px;
                line-height: 1.4;
                word-break: keep-all;
            }

            .bubble.me {
                background: #111;
                color: white;
            }

            /* âœ… ì…ë ¥ì°½ - í•˜ë‹¨ ê³ ì • */
            .chat-input-container {
                flex-shrink: 0;
                width: 100%;
                max-width: 480px;
                display: flex;
                padding: 10px 20px 20px; /* âœ… orderlistì™€ ë™ì¼ */
                background: white;
                border-top: 1px solid #ccc;
            }

            .chat-input {
                flex: 1;
                padding: 12px 14px;
                border-radius: 20px;
                border: 2px solid #ccc;
                outline: none;
                resize: none;
                min-height: 44px;
                max-height: 120px;
                overflow-y: auto;
                font-family: 'Inter', sans-serif;
                font-size: 14px;
            }

            .send-button {
                background: #ccc;
                border: none;
                border-radius: 20px;
                padding: 0 20px;
                margin-left: 10px;
                font-weight: 600;
                color: #666;
                cursor: pointer;
                height: 44px;
                flex-shrink: 0;
            }

            .send-button.active {
                background: #111;
                color: white;
            }

            @supports (padding: env(safe-area-inset-bottom)) {
                .chat-input-container {
                    padding-bottom: calc(20px + env(safe-area-inset-bottom));
                }
            }
        </style>
    </head>
    <body>
        <!-- Header -->
        <%- include('header.ejs') %>

        <!-- Chat section êµ¬ì¡° ì´í•´(ì•„ë˜ í•¨ìˆ˜ë¥¼ í†µí•´ ì´ê³³ì— ë©”ì„¸ì§€ì»¨ã„´í…Œì´ë„ˆ ê³„ì† ì¶”ê°€í•˜ëŠ” ë°©ì‹) -->
        <section class="chat-container" id="chatContainer">
            <% if (result.messages && result.messages.length > 0)
            <!-- ë©”ì‹œì§€ê°€ ìˆìœ¼ë©´ ì´ ë¶€ë¶„ ì‹¤í–‰ -->
            { %> <% result.messages.forEach(function(msg) { %>
            <!-- 2. forEach ë°˜ë³µë¬¸ -->
            <!-- 3. ê° ë©”ì‹œì§€ë§ˆë‹¤ ì•„ë˜ HTMLì´ ìƒì„±ë¨ -->
            <div class="chat-message <%= msg.senderId === currentUserId ? 'mine' : '' %>">
                <div class="sender"><%= msg.senderName.toUpperCase() %></div>
                <div class="bubble <%= msg.senderId === currentUserId ? 'me' : '' %>"><%= msg.content || msg.text %></div>
            </div>
            <% }); %>
            <!-- 4. ì•„ë˜ elseëŠ” ë©”ì‹œì§€ê°€ ì—†ìœ¼ë©´ -->
            <% } else { %>
            <p style="text-align: center; color: #999">No messages yet. Start the conversation!</p>
            <% } %>
        </section>

        <!-- Input -->
        <div class="chat-input-container">
            <textarea class="chat-input" id="messageInput" placeholder="Type your message..." rows="1"></textarea>
            <button class="send-button" id="sendBtn">SEND</button>
        </div>

        <!-- Socket.IO -->
        <script src="https://cdn.jsdelivr.net/npm/socket.io@4.7.2/client-dist/socket.io.min.js"></script>
<script>
    const socket = io();

    const input = document.getElementById('messageInput');
    const sendBtn = document.getElementById('sendBtn');
    const chatContainer = document.getElementById('chatContainer');
    const currentUserId = '<%= currentUserId %>';

    // ìë™ ìŠ¤í¬ë¡¤ í•¨ìˆ˜
    function scrollToBottom(smooth = true) {
        chatContainer.scrollTo({
            top: chatContainer.scrollHeight,
            behavior: smooth ? 'smooth' : 'auto'
        });
    }

    // HTML escape í•¨ìˆ˜
    function escapeHtml(unsafe) {
        return unsafe
            .replace(/&/g, '&amp;')
            .replace(/</g, '&lt;')
            .replace(/>/g, '&gt;')
            .replace(/"/g, '&quot;')
            .replace(/'/g, '&#039;');
    }

    // ì†Œì¼“ ì—°ê²° ì‹œ ë°© ì°¸ì—¬
    socket.on('connect', () => {
        console.log('Socket connected!');
        socket.emit('ask-join');
    });

    // ë°© ì°¸ì—¬ ì„±ê³µ
    socket.on('joined-room', (roomId) => {
        console.log('Joined room:', roomId);
    });

    // ë©”ì‹œì§€ ì „ì†¡
    function sendMessage() {
        const text = input.value.trim();
        if (!text) return;

        socket.emit('send-message', { text });
        input.value = '';
        sendBtn.classList.remove('active');
    }

    sendBtn.addEventListener('click', sendMessage);

    // ì…ë ¥ ì‹œ ë²„íŠ¼ í™œì„±í™”
    input.addEventListener('input', () => {
        if (input.value.trim()) {
            sendBtn.classList.add('active');
        } else {
            sendBtn.classList.remove('active');
        }
    });

    // ë©”ì‹œì§€ UIì— ì¶”ê°€
    function addMessageToUI(msg, isMine) {
        const wrap = document.createElement('div');
        wrap.className = 'chat-message' + (isMine ? ' mine' : '');

        const senderDiv = document.createElement('div');
        senderDiv.className = 'sender';
        senderDiv.textContent = msg.senderName.toUpperCase();

        const bubble = document.createElement('div');
        bubble.className = 'bubble' + (isMine ? ' me' : '');
        const messageText = msg.content || msg.text || '';
        bubble.innerHTML = escapeHtml(messageText).replace(/\n/g, '<br/>');

        wrap.appendChild(senderDiv);
        wrap.appendChild(bubble);
        chatContainer.appendChild(wrap);

        // ìë™ ìŠ¤í¬ë¡¤
        scrollToBottom();
    }

    // ìƒˆ ë©”ì‹œì§€ ìˆ˜ì‹ 
    socket.on('new-message', (msg) => {
        console.log('ğŸ“¨ New message:', msg);
        const isMine = msg.senderId === currentUserId;
        addMessageToUI(msg, isMine);
    });

    // í˜ì´ì§€ ë¡œë“œ ì‹œ ìŠ¤í¬ë¡¤ ë§¨ ì•„ë˜ë¡œ
    window.addEventListener('load', () => {
        scrollToBottom(false); // ì¦‰ì‹œ ì´ë™ (ë¶€ë“œëŸ¬ìš´ íš¨ê³¼ ì—†ì´)
    });

    // ì±„íŒ… ì»¨í…Œì´ë„ˆ ë³€í™” ê°ì§€ (orderlist ë©”ì‹œì§€ ë“±)
    const observer = new MutationObserver(() => {
        scrollToBottom();
    });

    observer.observe(chatContainer, {
        childList: true,
        subtree: true
    });
</script>
    </body>
</html>
