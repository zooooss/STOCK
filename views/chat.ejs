<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Team Chat</title>
        <style>
            * {
                box-sizing: border-box;
                font-family: 'Inter', sans-serif;
            }

            body {
                background: white;
                margin: 0;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .header {
                width: 100%;
                max-width: 480px;
                background: white;
                padding: 20px 0;
                text-align: center;
            }

            .header h1 {
                font-size: 20px;
                font-weight: 700;
                margin: 0 0 10px;
            }

            .nav-buttons {
                display: flex;
                justify-content: center;
                gap: 20px;
            }

            .nav-button {
                border: none;
                background: none;
                font-weight: 600;
                padding: 8px 20px;
                border-radius: 20px;
                cursor: pointer;
                color: #111;
            }

            .nav-button.active {
                background: #111;
                color: white;
            }

            .chat-container {
                width: 100%;
                max-width: 480px;
                background: white;
                display: flex;
                flex-direction: column;
                padding: 20px;
                min-height: 75vh;
                overflow-y: auto;
            }

            .chat-message {
                display: flex;
                flex-direction: column;
                margin-bottom: 20px;
            }

            .chat-message.mine {
                align-items: flex-end;
            }

            .sender {
                font-size: 12px;
                font-weight: 700;
                margin-bottom: 4px;
                margin-left: 6px;
            }

            .chat-message.mine .sender {
                margin-right: 6px;
                margin-left: 0;
            }

            .bubble {
                display: inline-flex;
                align-items: center;
                background: white;
                border: 2px solid #111;
                border-radius: 14px;
                padding: 10px 14px;
                max-width: 80%;
                font-size: 14px;
                line-height: 1.4;
                word-break: keep-all;
            }

            .bubble.me {
                background: #111;
                color: white;
            }

            .chat-input-container {
                width: 100%;
                max-width: 480px;
                display: flex;
                padding: 10px 20px 30px;
                background: white;
                border-top: 1px solid #ccc;
            }

            .chat-input {
                flex: 1;
                padding: 12px 14px;
                border-radius: 20px;
                border: 2px solid #ccc;
                outline: none;
                resize: vertical; /* ÏÇ¨Ïö©ÏûêÍ∞Ä ÌÅ¨Í∏∞ Ï°∞Ï†à Í∞ÄÎä• */
                min-height: 44px;
            }

            .send-button {
                background: #ccc;
                border: none;
                border-radius: 20px;
                padding: 0 20px;
                margin-left: 10px;
                font-weight: 600;
                color: #666;
                cursor: pointer;
            }

            .send-button.active {
                background: #111;
                color: white;
            }
        </style>
    </head>
    <body>
        <!-- Header -->
        <header class="header">
            <h1><%= result.restaurantName.toUpperCase() %></h1>
            <div class="nav-buttons">
                <button class="nav-button active">TEAM CHAT</button>
                <button class="nav-button" onclick="location.href='/orderlist'">ORDERLIST</button>
                <button class="nav-button">CART</button>
            </div>
        </header>

        <!-- Chat section -->
        <section class="chat-container" id="chatContainer">
            <% if (result.messages && result.messages.length > 0) { %> <% result.messages.forEach(function(msg) { %>
            <div class="chat-message <%= msg.senderId === currentUserId ? 'mine' : '' %>">
                <div class="sender"><%= msg.senderName.toUpperCase() %></div>
                <div class="bubble <%= msg.senderId === currentUserId ? 'me' : '' %>"><%= msg.text %></div>
            </div>
            <% }); %> <% } else { %>
            <p style="text-align: center; color: #999">No messages yet. Start the conversation!</p>
            <% } %>
        </section>

        <!-- Input -->
        <div class="chat-input-container">
            <textarea class="chat-input" id="messageInput" placeholder="Type your message..." rows="1"></textarea>
            <button class="send-button" id="sendBtn">SEND</button>
        </div>

        <!-- Socket.IO -->
        <script src="https://cdn.jsdelivr.net/npm/socket.io@4.7.2/client-dist/socket.io.min.js"></script>
        <script>
            const socket = io();

            const input = document.getElementById('messageInput');
            const sendBtn = document.getElementById('sendBtn');
            const chatContainer = document.getElementById('chatContainer');
            const currentUserId = '<%= currentUserId %>';

            // HTML escape Ìï®Ïàò
            function escapeHtml(unsafe) {
                return unsafe
                    .replace(/&/g, '&amp;')
                    .replace(/</g, '&lt;')
                    .replace(/>/g, '&gt;')
                    .replace(/"/g, '&quot;')
                    .replace(/'/g, '&#039;');
            }

            // ÏÜåÏºì Ïó∞Í≤∞ Ïãú Î∞© Ï∞∏Ïó¨
            socket.on('connect', () => {
                console.log('‚úÖ Socket connected!');
                socket.emit('ask-join');
            });

            // Î∞© Ï∞∏Ïó¨ ÏÑ±Í≥µ
            socket.on('joined-room', (roomId) => {
                console.log('‚úÖ Joined room:', roomId);
            });

            // Î©îÏãúÏßÄ Ï†ÑÏÜ°
            function sendMessage() {
                const text = input.value.trim();
                if (!text) return;

                // ÏÑúÎ≤ÑÎ°ú Î©îÏãúÏßÄ Ï†ÑÏÜ°Îßå ÌïòÍ≥†, UI Ï∂îÍ∞ÄÎäî ÏÑúÎ≤Ñ ÏùëÎãµ Î∞õÏùÄ ÌõÑÏóê!
                socket.emit('send-message', { text });
                input.value = '';
                sendBtn.classList.remove('active');
            }

            sendBtn.addEventListener('click', sendMessage);

            // ÏûÖÎ†• Ïãú Î≤ÑÌäº ÌôúÏÑ±Ìôî
            input.addEventListener('input', () => {
                if (input.value.trim()) {
                    sendBtn.classList.add('active');
                } else {
                    sendBtn.classList.remove('active');
                }
            });
            // Î©îÏãúÏßÄ UIÏóê Ï∂îÍ∞Ä
            function addMessageToUI(msg, isMine) {
                const wrap = document.createElement('div');
                wrap.className = 'chat-message' + (isMine ? ' mine' : '');

                const senderDiv = document.createElement('div');
                senderDiv.className = 'sender';
                senderDiv.textContent = msg.senderName.toUpperCase();

                const bubble = document.createElement('div');
                bubble.className = 'bubble' + (isMine ? ' me' : '');
                bubble.innerHTML = escapeHtml(msg.text).replace(/\n/g, '<br/>');

                wrap.appendChild(senderDiv);
                wrap.appendChild(bubble);
                chatContainer.appendChild(wrap);

                // Ïä§ÌÅ¨Î°§ Îß® ÏïÑÎûòÎ°ú
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
            // ÏÉà Î©îÏãúÏßÄ ÏàòÏã†
            socket.on('new-message', (msg) => {
                console.log('üì® New message:', msg);
                const isMine = msg.senderId === currentUserId;
                addMessageToUI(msg, isMine);
            });

            // ÌéòÏù¥ÏßÄ Î°úÎìú Ïãú Ïä§ÌÅ¨Î°§ Îß® ÏïÑÎûòÎ°ú
            window.addEventListener('load', () => {
                chatContainer.scrollTop = chatContainer.scrollHeight;
            });
        </script>
    </body>
</html>
