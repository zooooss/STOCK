<style>
    /* 헤더 전용 스타일 */
    .header-container {
        width: 100%;
        max-width: 480px;
        background: white;
        padding: 0 20px 0 20px; /* 좌우 여백 추가 */
        display: flex;
        flex-direction: column;
        align-items: center;
        border-bottom: 1px solid #111;
    }

    .top-row {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    .header-title {
        font-size: 22px;
        font-weight: 800;
        margin: 0;
        letter-spacing: -0.5px;
        color: #111;
    }

    .settings-icon {
        position: absolute;
        right: 0;
        cursor: pointer;
    }

    .nav-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-bottom: 20px;
        width: 100%;
    }

    .nav-btn {
        background: none;
        border: none;
        font-size: 13px;
        font-weight: 700;
        color: #111;
        padding: 10px 18px;
        border-radius: 20px;
        cursor: pointer;
        text-decoration: none;
        position: relative;
    }

    /* 활성화된 버튼 스타일 (검정 배경) */
    .nav-btn.active {
        background-color: #1a1b2e; /* 다크 네이비/블랙 */
        color: white;
    }

    /* 뱃지(알림 숫자) 스타일 */
    .badge {
        position: absolute;
        top: 0;
        right: -5px;
        background-color: #c94e4e; /* 붉은색 */
        color: white;
        font-size: 10px;
        font-weight: 700;
        padding: 2px 5px;
        border-radius: 10px;
        border: 2px solid white;
    }
</style>
<div class="header-container">
    <div class="top-row">
        <h1><%= result.restaurantName.toUpperCase() %></h1>
        <a href="/mypage" class="settings-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 8H20" stroke="#111" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                <circle cx="8" cy="8" r="3" fill="white" stroke="#111" stroke-width="2" />
                <path d="M4 16H20" stroke="#111" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                <circle cx="16" cy="16" r="3" fill="white" stroke="#111" stroke-width="2" />
            </svg>
        </a>
    </div>

    <div class="nav-buttons">
        <a href="/chat" class="nav-btn <%= activeTab === 'chat' ? 'active' : '' %>"> TEAM CHAT </a>

        <a href="/orderlist" class="nav-btn <%= activeTab === 'orderlist' ? 'active' : '' %>">
            ORDERLIST
            <span class="badge">12</span>
        </a>

        <a href="#" class="nav-btn <%= activeTab === 'cart' ? 'active' : '' %>"> CART </a>
    </div>
</div>
